<main>

<div class="burger-card-view">
<form class="form" action="/burger/edit/{{id}}" method="post">
  
  <img class="img-circle" src="{{image_url}}" alt="{{name}}">
  
  <br>

  <label for="name" class="form-item">
    Name:
    <br>
    <input type="text" name="name" value="{{name}}">
  </label>

  <br>

  <label for="restaurant" class="form-item">
    Restaurant:
    <br>
    <input type="text" name="restaurant" value="{{restaurant}}">
  </label>
  
  <br>

  <label for="description" class="form-item">
    Description:
    <br>
    <input type="text" name="description" value="{{description}}">
  </label>
  
  <br>

  <label for="comment" class="form-item">
    Comment:
    <br>
    <input type="text" name="comment" value="{{comment}}">
  </label><br>
  
  <input type="submit" name="" value="Submit">
</form>
</div>

</main>